<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= // locals.title %>
  </title>
  <meta name="description" content="<%=// locals.description %>" />
  <link rel="shortcut icon" type="image/x-icon" href="/assets/imgs/theme/Converse_logo.svg" />
  <!-- Template CSS -->
  <link rel="stylesheet" href="/assets/css/main.css" />
</head>



<main class="main">
  <div class="page-header breadcrumb-wrap">
    <div class="container">
      <div class="breadcrumb">
        <a href="/" rel="nofollow">Home</a>
        <span></span> password
        <span></span> forgotpassword
      </div>
      <div id="cartNotification"
        style="display: none; position: fixed; top: 20px; right: 20px; background-color: #333; color: #fff; padding: 10px; border-radius: 5px;">
        Item added to cart!
      </div>
    </div>
  </div>
  <section class="pt-150 pb-150">
    <div class="container">
      <div class="row">
        <div class="col-lg-10 m-auto">
          <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
              <div
                class="login_wrap widget-taber-content p-30 background-white border-radius-10 mb-md-5 mb-lg-0 mb-sm-5">
                <div class="padding_eight_all bg-white">
                  <div class="heading_s1">
                    <h3 class="mb-30">Forgot password</h3>
                  </div>
                  <form action="/forgotPassword" method="post" onsubmit="return validationChecking()">
                    <div class="form-group">
                      <input type="email" id="email" name="email" placeholder="Enter Email" />
                      <div id="erroremail" class="ms-2 text-danger"></div>
                    </div>


                    <div class="form-group text-center">
                      <button type="submit" class="btn btn-fill-out btn-block hover-up" name="login">submit</button>
                    </div>
                   
                </div>
                <div id="invalid" >
                  <%  if (typeof message !=='undefined' && message) { %>
                    <p style="color: rgb(194, 8, 8);" id="message">
                      <%= message %>
                    </p>
                    <%  } %>
                    </div>
                </form>


              </div>
            </div>
          </div>
        </div>


      </div>
    </div>
    </div>
  </section>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

<script>

  document.addEventListener('DOMContentLoaded', function () {
    let emailId = document.getElementById("email");
    let errorEmail = document.getElementById("erroremail");


    emailId.addEventListener('input', function () {
      errorEmail.innerHTML = emailId.value.trim() === "" ? "Please enter user name" : /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(emailId.value) == false ? "Please enter alphabets only" : "";
    });



  });
  function validationChecking() {
    let emailId = document.getElementById("email")
    let errorEmail = document.getElementById("erroremail");


    errorEmail.innerHTML =
      emailId.value.trim() === ""
        ? "Please enter email"
        : /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(emailId.value) == false
          ? "Please enter valid email only"
          : "";

    if (errorEmail.innerHTML) return false;

    return true;
  }


</script>
<script>
  setTimeout(function() {
    var messageDiv = document.getElementById('invalid');
    if (messageDiv) {
      messageDiv.style.display = 'none';
    }
  }, 3000); 
</script>
</body>

</html>